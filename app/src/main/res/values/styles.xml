<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/pl3</item>
        <item name="colorPrimaryDark">@color/pl4</item>
        <item name="colorAccent">@color/pl2</item>
    </style>

    <style name="FacebookLoginButton">
        <item name="android:textSize">20dp</item>
        <item name="android:background">@drawable/retangulo_facebook</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="android:Theme.Material.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
