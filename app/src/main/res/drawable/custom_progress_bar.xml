<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:startColor="#9f9f9f"
                android:centerColor="#9f9f9f"
                android:centerY="1.0"
                android:endColor="#0d1522"
                android:angle="270"
                />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:startColor="@color/azul_questao"
                    android:centerColor="@color/azul_questao"
                    android:centerY="1.0"
                    android:endColor="#9f9f9f"
                    android:angle="270"
                    />
            </shape>
        </clip>
    </item>
</layer-list>