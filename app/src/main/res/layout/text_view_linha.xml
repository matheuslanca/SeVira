<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutLinha"
    android:layout_width="wrap_content"
    android:layout_marginStart="100dp"
    android:layout_height="40dp" >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgLinha"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="5dp"
        android:src="@drawable/linha_azul"
        app:layout_constraintBottom_toBottomOf="@id/layoutLinha"
        app:layout_constraintEnd_toStartOf="@id/txtLinha"
        app:layout_constraintTop_toTopOf="@id/layoutLinha" />

    <TextView
        android:id="@+id/txtLinha"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:text="testando"
        android:textColor="#0f0f0f"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@id/imgLinha"
        app:layout_constraintStart_toStartOf="@id/imgLinha"
        app:layout_constraintTop_toTopOf="@id/imgLinha" />


</android.support.constraint.ConstraintLayout>